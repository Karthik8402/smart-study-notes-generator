# ============================================================
# Production Environment Variables - AWS EC2
# ============================================================
# Copy this file to .env and fill in your actual values

# MongoDB Atlas Connection
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/smart_study_notes?retryWrites=true&w=majority
DATABASE_NAME=smart_study_notes

# JWT Authentication
SECRET_KEY=your-production-secret-key-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Groq API (FREE LLM - Get key at https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db

# File Upload
UPLOAD_DIRECTORY=./uploads
MAX_UPLOAD_SIZE_MB=50

# Server (Production settings)
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# RAG Settings
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# ============================================================
# Optional: Google APIs (for Google Calendar & Drive integration)
# ============================================================
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
